{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "gentei/build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/login/discord",
        "destination": "/index.html"
      },
      {
        "source": "/app",
        "destination": "/index.html"
      }
    ],
    "cleanUrls": true
  },
  "emulators": {
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": false
    },
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8099
    }
  }
}
